{
    "extends": "tslint-config-airbnb",
    "rules": {
        "indent": [true, "spaces", 4],
        "ter-indent": [false],
        "trailing-comma": [false],
        "ter-arrow-parens": [true, "as-needed"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "max-line-length": [true, 150]
    }
}
